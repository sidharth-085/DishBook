<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.SplashScreenActivity"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_315sdp"
        android:src="@drawable/ic_intro_image"
        android:contentDescription="@string/intro_png" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" DishBook "
        android:textSize="70sp"
        android:fontFamily="@font/bangers"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking is pure joy ! "
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/bangers"/>

</LinearLayout>